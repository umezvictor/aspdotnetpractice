@model  FileManagerApp.ViewModels.UploadFileViewModel

@{ 
    ViewBag.Title = "Upload Files";
}

<h1>Upload a new file</h1>
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-controller="Files" asp-action="UploadFiles">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UploaderName">Uploader's Name</label>
                <input asp-for="UploaderName" type="text" class="form-control" />
                <span asp-validation-for="UploaderName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" type="text" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                 <input asp-for="UploadedFile" class="form-control custom-file-input" />
                 
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

            @section  Scripts {
            <script>
                $(document).ready(function () {
                    $('custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
            }
        </form>
    </div>
</div>