@model IEnumerable<FileManagerApp.Models.FileUpload>
@{
    ViewBag.Title = "Uploaded Files";
}

<h4>Uploaded Files</h4>

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                File Id
            </th>
            <th>
                Uploader's Name
            </th>
            <th>
                Uploaded File
            </th>
            <th>
               Description
            </th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var filePath = "~/uploads/" + (item.FilePath ?? "nofile.jpg");
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploaderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilePath)
                    <a href="@filePath">Download file</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="" asp-route-id="@item.FileId" class="btn btn-success btn-sm">edit</a> ||
                    <a asp-action="" asp-route-id="@item.FileId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash-alt fa-lg">delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
