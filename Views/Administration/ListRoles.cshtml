@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto"
       asp-controller="Administration" 
       asp-action="CreateRole">Add a new role</a>
    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role Id: @role.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>

            <div class="card-footer">
                <a  class="btn btn-primary" asp-action="EditRole" 
                   asp-controll er="Administration" asp-route-id="@role.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>

        <div class="card-body">
            <h5 class="card-title">Create a new role using the button below</h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}